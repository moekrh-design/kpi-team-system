<%- include('partials/header', { pageTitle: 'تغيير كلمة المرور' }) %>

<div class="grid" style="max-width:560px;margin:22px auto">
  <div class="card">
    <div style="display:flex;align-items:center;justify-content:space-between;gap:12px;flex-wrap:wrap">
      <h2 style="margin:0">تغيير كلمة المرور</h2>
      <a class="btn" href="/">رجوع</a>
    </div>

    <div class="small" style="margin-top:6px">الحساب: <b><%= me.display_name %></b> (<%= me.username %>)</div>

    <% if (error) { %>
      <div class="error" style="margin:12px 0"><%= error %></div>
    <% } %>

    <% if (success) { %>
      <div class="notice" style="margin:12px 0;border-color:rgba(7,168,105,.55);background:rgba(7,168,105,.12)">
        ✅ <b><%= success %></b>
      </div>
    <% } %>

    <form method="post" action="/account/password" class="grid" style="margin-top:12px">
      <div>
        <label class="small">كلمة المرور الحالية</label>
        <input class="input" type="password" name="current_password" autocomplete="current-password" required />
      </div>

      <div class="formRow">
        <div>
          <label class="small">كلمة المرور الجديدة</label>
          <input class="input" type="password" name="new_password" autocomplete="new-password" required />
          <div class="help">يفضّل 6 أحرف فأكثر</div>
        </div>
        <div>
          <label class="small">تأكيد كلمة المرور الجديدة</label>
          <input class="input" type="password" name="confirm_password" autocomplete="new-password" required />
        </div>
      </div>

      <div class="rowActions noPrint">
        <button class="btn btnGood" type="submit">حفظ</button>
        <a class="btn" href="/">إلغاء</a>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>

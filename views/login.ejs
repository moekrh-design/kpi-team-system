<%- include('partials/header', { pageTitle: 'تسجيل الدخول' }) %>

<div class="grid" style="max-width:520px;margin:22px auto">
  <div class="card">
    <h2 style="margin:0 0 8px 0">تسجيل الدخول</h2>
    <div class="small">اسم مستخدم وكلمة مرور</div>

    <% if (error) { %>
      <div class="error" style="margin:12px 0"><%= error %></div>
    <% } %>

    <form method="post" action="/login" class="grid" style="margin-top:12px">
      <div>
        <label class="small">اسم المستخدم</label>
        <input class="input" name="username" autocomplete="username" required />
      </div>
      <div>
        <label class="small">كلمة المرور</label>
        <input class="input" type="password" name="password" autocomplete="current-password" required />
      </div>
      <button class="btn btnGood" type="submit" style="width:100%">دخول</button>
      <div class="help">بيانات المدير الافتراضية (لأول تشغيل): <b>admin</b> / <b>Admin@123</b></div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>

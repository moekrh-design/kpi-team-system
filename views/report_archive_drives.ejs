<%- include('partials/header', { pageTitle: title }) %>

<div class="grid" style="max-width:1100px;margin:0 auto">
  <div class="card">
    <div class="noPrint" style="display:flex;gap:10px;justify-content:flex-end;align-items:center;flex-wrap:wrap">
      <a class="btn" href="/reports" style="background:#f3f7ff;color:#0b2a63">رجوع للتقارير</a>
      <a class="btn" href="/reports/archive/drives.xlsx">تصدير Excel</a>
      <button class="btn" onclick="window.print()">طباعة / PDF</button>
    </div>

    <%- include('partials/report_header', { title, meta }) %>

    <div class="card" style="margin-top:12px">
      <div style="overflow:auto">
        <table class="table">
          <thead>
            <tr>
              <th style="min-width:220px">الهارد</th>
              <th style="min-width:140px">الرقم التسلسلي</th>
              <th style="min-width:160px">الموقع</th>
              <th>عدد الأصول</th>
              <th>عدد المناسبات</th>
              <th style="min-width:260px">ملاحظات</th>
            </tr>
          </thead>
          <tbody>
            <% rows.forEach(d => { %>
              <tr>
                <td style="font-weight:700"><%= d.name %></td>
                <td class="small"><%= d.serial || '-' %></td>
                <td class="small"><%= d.location || '-' %></td>
                <td class="small"><%= d.asset_count || 0 %></td>
                <td class="small"><%= d.event_count || 0 %></td>
                <td class="small"><%= d.notes || '' %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
